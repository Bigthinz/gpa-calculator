 <!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">

	<title>GPA | Calculator</title>
	<link rel="shortcut icon" href="/asserts/icons8_greater_3.ico" type="image/x-icon">
	<link rel="stylesheet" type="text/css" href="/css/style.css">
	<script src="https://unpkg.com/@lottiefiles/lottie-player@0.4.0/dist/lottie-player.js" defer /></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.21.1/axios.min.js" defer /></script>
	<script  src="/js/calculate.js" defer /></script>
	<script  src="/js/tab.js" defer /></script>
</head>
<body>
	<header id="heads">
		<div class="wrap">
			<div class="img1">
				<lottie-player
					  autoplay
					 
					  loop
					  mode="normal"
					  src="/asserts/boy.json"
				  style="width: 250px">
				</lottie-player>
				<!-- <img src="/asserts/school.png" alt=""> -->
			</div>
			<div class="title">
				<h1>GPA Calculator</h1>
			</div>
			<div class="img1">
				<img src="/asserts/Book Lovers.png" alt="">
			</div>
		</div>
	</header>

	<nav id="navtab">
		<div class="wrap">
			<a href="#" class="active-tab tab"><div class="calc-tab">
				<h4>Calculator</h4>
			</div></a>
			<a href="/cgpa" class="tab"><div class="cgpa-tab ">
				<h4>CGPA</h4>
			</div></a>
			<a href="/position" class="tab"><div class="pos-tab">
				<h4>Position</h4>
			</div></a>
			
		</div>
	</nav>

	<div class="candidate">
		<div class="wrap">
			<% if (user) { %>
			<div class="s-name"><%= user.firstName %>  - <%= user.secondName %></div>
			<div class="s-indexnum"> # <%= user.index_number %></div>
			<% } %>
		</div>
	</div>




<article id="tab-1" class="tabs">
	<section id="table" class="table">
		<div class="wrap">
			<div class="mag">
				<div class="calc">

					<!-- <div class="sem-head">
						<div><h4>semester 1</h4></div>
						<div><img src="public/asserts/icons8_drop_down_2.ico" alt=""></div>
					</div> -->

					<div class="ori-head">
						
						<div class="ori-main">

							<h4>
								<select name="" id="year">
									<option value="year-1">Year-1</option>
									<option value="year-2">Year-2</option>
									<option value="year-3">Year-3</option>
									<option value="year-4">Year-4</option>
								</select>
							</h4>
							<h4>
								<select name="" id="sem">
									<option value="semester-1">Semester-1</option>
									<option value="semester-2">Semester-2</option>
								</select>
							</h4>

							<div><img src="/asserts/icons8_minus_sign.ico" alt=""></div>
						</div>

						<div class="t-head">
							<h4>#</h4>
							<h4>course</h4>
							<h4>scores</h4>
							
							<h4>credit</h4>
							<h4>course type</h4>
							<h4>grade</h4>						
						</div>

						<!-- <form class="cal-form">
 -->						<div class="t-row-1 t-row cal-form">
							<div class="t-data " >
								<div class="entry ids">1</div>
								<div class="entry sem-1 ">
									<select name="course" id="course" class="course">
										<option value="Auditing">Auditing</option>
										<option value="Networking">Networking</option>
										<option value="Data Mining">Data Mining</option>
										<option value="Java">Java</option>
										<option value="French">French</option>
										<option value="Economics">Economics</option>
										<option value="C#">C#</option>
										<option value="Cryptography">Cryptography</option>
									</select>
									<!-- <input type="text" name="course" class="course" placeholder="-" /> -->
								</div>
								<div class="entry sem-1"><input type="text" name="scores" class="scores" placeholder="-"></div>
								
								<div class="entry sem-1">
									<select name="credit" id="credit" class="credit">
										<option value="2">2</option>
										<option value="3">3</option>
										
									</select>
									<!-- <input type="text" name="credit" class="credit" placeholder="-"> -->
								</div>
								<div class="entry sem-1">
									<select name="credit" id="course-type" class="course-type">
										<option value="regular">regular</option>
										<option value="elective">elective</option>
										
									</select>
									<!-- <input type="text" name="course-type" class="course-type" placeholder="regular"> -->
								</div>
								<div class="entry sem-1 grade-point">-</div>						
							</div>

						</div>
					
						<div class="submit-container">
							<button  class="submit-btn">
								<span class="spin">
								
							
								</span><span>Calculator</span></button>
						
						</div>
						<!-- </form> -->
						
					</div>
					
				</div>
				<div class="result">
					<div class="c-head">
						<div class="c-main">
							<div class="gpa-head"><h4>current gpa</h4></div>
							
						</div>

						<div class="r-head">
							<h4>#</h4>
							<h4>course name</h4>
												
						</div>

						<% if(nowGpa !== NaN ){ %>
							<div class="currentCgpa"><%= nowGpa%></div>
						<% }else{%>	

						<div class="r-row">
							<!-- <div class="r-data">
								<h4>1</h4>
								<h4>database</h4>
												
							</div>

							<div class="r-data">
								<h4>1</h4>
								<h4>database</h4>
														
							</div>

							<div class="r-data">
								<h4>1</h4>
								<h4>database</h4>
														
							</div> -->
							<lottie-player
						  autoplay
						 
						  loop
						  mode="normal"
						  src="/asserts/hand.json"
						  style="width: 250px">
						</lottie-player>
						</div>
						<% } %>
						
					</div>
					
				</div>
		</div>
		</div>
	</section>

<!-- <div class="alert alert--success">
	working
</div> -->

</article>



